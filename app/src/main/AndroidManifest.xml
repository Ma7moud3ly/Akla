            </intent-filter>
        </activity>
        <activity android:name="com.ma7moud3ly.akla.activities.RecipeActivity"></activity>
        <activity android:name="com.ma7moud3ly.akla.activities.FavActivity" />
        <activity android:name="com.ma7moud3ly.akla.activities.RecipeDetailsActivity" />
        <activity android:name="com.ma7moud3ly.akla.activities.SearchActivity" />
