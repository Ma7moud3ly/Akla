<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/step_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/step_text_margin_top"
        android:background="@color/listStepColor"
        android:textColor="@color/listStepTextColor"
        android:fontFamily="@font/majallab"
        android:gravity="right"
        android:paddingEnd="5dp"
        android:paddingStart="@dimen/step_text_padding_start"
        android:text=""
        android:textSize="19sp" />


    <TextView
        android:id="@+id/shadow"
        android:layout_width="@dimen/step_item_shadow_w"
        android:layout_height="@dimen/step_item_shadow_h"
        android:layout_gravity="right"
        android:background="@drawable/round_corners_left"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/step_number"
        android:layout_width="@dimen/step_item_number_w"
        android:layout_height="@dimen/step_item_number_h"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_corners_left"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:text=""
        android:textColor="@color/listStepTextColor"
        android:textSize="15sp" />

</FrameLayout>